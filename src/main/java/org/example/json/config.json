{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "componentMapper": {
      "type": "object",
      "patternProperties": {
        "^[A-Za-z_$][A-Za-z0-9_$]*$": {
          "type": "object",
          "properties": {
            "tags": {
              "type": "string"
            },
            "technology": {
              "type": "string"
            },
            "description": {
              "type": "string"
            },
            "container": {
              "type": "string"
            }
          },
          "required": ["tags", "technology", "description"],
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    }
  },
  "required": ["componentMapper"],
  "additionalProperties": false
}
