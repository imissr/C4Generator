{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "componentMapper": {
      "type": "object",
      "patternProperties": {
        "^[A-Za-z_$][A-Za-z0-9_$]*$": {
          "type": "object",
          "properties": {
            "tags": {
              "type": "string"
            },
            "technology": {
              "type": "string"
            },
            "description": {
              "type": "string"
            },
            "container": {
              "type": "string"
            },
            "relations": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "target": {
                    "type": "string",
                    "description": "The key/name of the component this one relates to"
                  },
                  "type": {
                    "type": "string",
                    "description": "The kind of relationship (e.g., 'dependsOn', 'uses', 'wrappedBy' , extends, etc.)"
                  }
                },
                "required": ["target", "type"],
                "additionalProperties": false
              },
              "description": "List of outbound relationships from this component"
            }
          },
          "required": ["tags", "technology", "description"],
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    }
  },
  "required": ["componentMapper"],
  "additionalProperties": false
}
